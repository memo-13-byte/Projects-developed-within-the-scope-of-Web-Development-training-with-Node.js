#mySlider.carousel.slide(data-bs-ride="carousel")
    .carousel-indicators
        button.active(type="button" data-bs-target="#mySlider" data-bs-slide-to="0")
        button(type="button" data-bs-target="#mySlider" data-bs-slide-to="1")
        button(type="button" data-bs-target="#mySlider" data-bs-slide-to="2")
    
    .carousel-inner
        .carousel-item.active
            img.d-block.img-fluid(src="/img/slider1.jpg" alt="Slide 1")

        .carousel-item
            img.d-block.img-fluid(src="/img/slider2.jpg" alt="Slide 2")
    
        .carousel-item
            img.d-block.img-fluid(src="/img/slider3.jpg" alt="Slide 3")
        
    
    button.carousel-control-prev(type="button" data-bs-target="#mySlider" data-bs-slide="prev")
        span.carousel-control-prev-icon(aria-hidden="true")
        span.visually-hidden Previous

    button.carousel-control-next(type="button" data-bs-target="#mySlider" data-bs-slide="next")
        span.carousel-control-next-icon(aria-hidden="true")
        span.visually-hidden Next
